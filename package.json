{
  "name": "cricket-scores-live-api",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "nodemon --exec babel-node src/server.js",
    "clean-dist": "npm run remove-dist && mkdir dist",
    "remove-dist": "node_modules/.bin/rimraf ./dist",
    "prebuild": "npm-run-all clean-dist lint",
    "build": "babel src --out-dir dist",
    "build-get-matches": "rimraf ./lambdas-dist/get-matches && webpack --config ./webpack.config.getMatches.js --hide-modules --progress --colors && node create-zip.js get-matches",
    "build-get-match": "rimraf ./lambdas-dist/get-match && webpack --config ./webpack.config.getMatch.js --hide-modules --progress --colors && node create-zip.js get-match",
    "build-add-match": "rimraf ./lambdas-dist/add-match && webpack --config ./webpack.config.addMatch.js --hide-modules --progress --colors && node create-zip.js add-match",
    "build-put-match": "rimraf ./lambdas-dist/put-match && webpack --config ./webpack.config.putMatch.js --hide-modules --progress --colors && node create-zip.js put-match",
    "build-delete-match": "rimraf ./lambdas-dist/delete-match && webpack --config ./webpack.config.deleteMatch.js --hide-modules --progress --colors && node create-zip.js delete-match",
    "build-get-teams": "rimraf ./lambdas-dist/get-teams && webpack --config ./webpack.config.getTeams.js --hide-modules --progress --colors && node create-zip.js get-teams",
    "build-authoriser": "rimraf ./lambdas-dist/authoriser && webpack --config ./webpack.config.authoriser.js --hide-modules --progress --colors && node create-zip.js authoriser",
    "build-match-updates": "rimraf ./lambdas-dist/match-updates && webpack --config ./webpack.config.matchUpdates.js --hide-modules --progress --colors && node create-zip.js match-updates",
    "build-sockets": "rimraf ./lambdas-dist/sockets && webpack --config ./webpack.config.sockets.js --hide-modules --progress --colors && node create-zip.js sockets",
    "build-lambdas": "npm run build-get-matches && npm run build-get-match && npm run build-add-match && npm run build-put-match && npm run build-delete-match && npm run build-get-teams && npm run build-authoriser && npm run build-sockets && npm run build-match-updates",
    "deploy-lambdas": "npm run build-lambdas && serverless deploy",
    "serve": "node dist/server.js",
    "lint": "node_modules/.bin/esw src --ext .js",
    "heroku-postbuild": "npm-run-all clean-dist build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChrisDobby/cricket-scores-live-api.git"
  },
  "author": "Chris Dobson",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ChrisDobby/cricket-scores-live-api/issues"
  },
  "homepage": "https://github.com/ChrisDobby/cricket-scores-live-api#readme",
  "dependencies": {
    "aws-apigatewaymanagementapi": "^0.1.0",
    "aws-sdk": "^2.459.0",
    "bad-words": "^3.0.0",
    "body-parser": "^1.18.3",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.3.0",
    "jwt-decode": "^2.2.0",
    "mongodb": "^3.1.8",
    "socket.io": "^2.1.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "adm-zip": "^0.4.13",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.7.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "eslint-watch": "^4.0.2",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "serverless": "^1.41.0",
    "serverless-websockets-plugin": "^1.0.0",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0",
    "webpack-node-externals": "^1.7.2"
  }
}